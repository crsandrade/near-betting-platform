# Configuração do Sistema de Gestão de Tarefas
# Copie este arquivo para .env e configure as variáveis conforme necessário

# Tipo de banco de dados
# Opções: localStorage, mongodb, postgresql, firebase
DATABASE_TYPE=localStorage

# Ambiente de execução
NODE_ENV=development

# Configurações do MongoDB
MONGODB_URI=mongodb://localhost:27017/taskmanager

# Configurações do PostgreSQL
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=taskmanager
PG_USERNAME=postgres
PG_PASSWORD=

# Configurações do Firebase
FIREBASE_API_KEY=your_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Configurações de Segurança
ENCRYPTION_KEY=your_encryption_key_here_change_in_production
JWT_SECRET=your_jwt_secret_here

# Configurações do Servidor
PORT=3000
HOST=localhost

# Configurações de Log
LOG_LEVEL=info
ENABLE_LOGGING=true

# Configurações de Cache
ENABLE_CACHE=true
CACHE_TIMEOUT=300000

# Configurações de Backup
BACKUP_DIRECTORY=./backups
MAX_BACKUPS=5
AUTO_BACKUP=true
BACKUP_INTERVAL=86400000

# Configurações de Email (para notificações futuras)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true